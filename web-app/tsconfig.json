{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "moduleResolution": "node",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"],
        "@/utils/*": ["./utils/*"]
      }
    },
    "include": [
      "**/*.ts",
      "**/*.js",
      "./types/**/*.d.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }